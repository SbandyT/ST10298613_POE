@model ST10298613_POE.Models.CustomerProfile



<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>ABC Retail's Customer Management</title>
    <!-- Link to Bootstrap CSS -->
    <link rel="stylesheet" href="~/css/StyleSheet.css" />
    <style>
        body {
            background-color: #f0f8ff;
        }
        .container {
            margin-top: 50px;
        }
        .form-control {
            margin-bottom: 15px;
        }
        .btn-custom {
            background-color: #007bff;
            color: white;
            border: none;
        }
        .btn-custom:hover {
            background-color: #0056b3;
        }
        .header {
            margin-bottom: 30px;
            text-align: center;
            color: #007bff;
        }
        .card {
            margin-bottom: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="header">ABC RETAIL'S CUSTOMER MANAGEMENT</h1>

        <div class="card p-4">
            <h4>Upload Image</h4>
            <form asp-action="UploadImage" method="post" enctype="multipart/form-data">
                <input type="file" name="file" class="form-control" />
                <button type="submit" class="btn btn-custom">Upload Image</button>
            </form>
        </div>

        <div class="card p-4">
            <h4>Add Customer Profile</h4>
            <form asp-action="AddCustomerProfile" method="post">
                <input type="text" name="FirstName" placeholder="First Name" class="form-control" />
                <input type="text" name="LastName" placeholder="Last Name" class="form-control" />
                <input type="email" name="Email" placeholder="Email" class="form-control" />
                <input type="text" name="PhoneNumber" placeholder="Phone Number" class="form-control" />
                <button type="submit" class="btn btn-custom">Add Profile</button>
            </form>
        </div>

        <div class="card p-4">
            <h4>Process Order</h4>
            <form asp-action="ProcessOrder" method="post">
                <input type="text" name="orderId" placeholder="Order ID" class="form-control" />
                <button type="submit" class="btn btn-custom">Process Order</button>
            </form>
        </div>

        <div class="card p-4">
            <h4>Upload Contract</h4>
            <form asp-action="UploadContract" method="post" enctype="multipart/form-data">
                <input type="file" name="file" class="form-control" />
                <button type="submit" class="btn btn-custom">Upload Contract</button>
            </form>
        </div>
    </div>

    <!-- Link to Bootstrap JS and dependencies  -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
